    <style name="MaterialLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/lightGray</item>
        <item name="colorAccent">@color/colorMaterialBlue</item>
        <item name="actionBarStyle">@style/DefMyActionBar</item>
        <item name="buttonPrimary">@style/ButtonStyle</item>
        <item name="buttonSecondary">@style/Material2SecondaryButtonStyle</item>
        <item name="buttonAdv">@style/AdvButtonStyle</item>
        <item name="displayStyle">@style/DisplayStyle</item>
        <item name="displayTextStyle">@style/Material2DisplayTextStyle</item>
        <item name="clearStyle">@style/Material2DisplayClearStyle</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Material2SecondaryButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorOffWhite</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/productsans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Material2DisplayTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Material2DisplayClearStyle">
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="Material2MyActionBar" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/colorWhite</item>
    </style>

