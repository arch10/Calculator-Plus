        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DisplayStyle">
        <item name="android:background">@drawable/background_body</item>
    </style>

    <style name="DisplayTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DisplayClearStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="MyActionBar" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="background">@drawable/background_title</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="displayOptions">showHome|useLogo</item>
