    </style>

    <style name="DarkAdvButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">?colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/productsans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DarkDisplayStyle">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="DarkDisplayTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DarkDisplayClearStyle">
        <item name="android:background">@color/colorDarkPrimaryDark</item>
    </style>

    <!-- Default Theme-->
    <style name="DefAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorMaterialDarkGrey</item>
        <item name="colorAccent">@color/colorMaterialOrange</item>
        <item name="actionBarStyle">@style/DefMyActionBar</item>
